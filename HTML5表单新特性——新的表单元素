  <script>
    var timer = setInterval(function(){
      var v = p2.value;
      v = parseFloat(v);
      v += 0.05;
      p2.value = v;
      if(v>=1){
        clearInterval(timer);
      }
    },100)

    var tm1 = setInterval(function(){
      var v = m1.value;
      v = parseInt(v);
      v+=2;
      m1.value = v;
      if(v>=100){
        clearInterval(tm1);
      }
    }, 100)
    var tm2 = setInterval(function(){
      var v = m2.value;
      v = parseInt(v);
      v+=10;
      m2.value = v;
      if(v>=500){
        clearInterval(tm2);
      }
    }, 100)
    var tm3 = setInterval(function(){
      var v = m3.value;
      v = parseInt(v);
      v+=1000;
      m3.value = v;
      if(v>=100000){
        clearInterval(tm3);
      }
    }, 100)
  </script>





